<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/listcolor">

	<Button android:text="@string/botonLista" android:id="@+id/botonlista"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_margin="10px">
	</Button>
	<Button android:text="@string/botonMapa" android:layout_height="wrap_content"
		android:id="@+id/botonmapa" android:layout_width="fill_parent"
		android:layout_margin="10px"></Button>

	<ImageView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:src="@drawable/elmundo"
		android:id="@+id/imageView1" android:layout_gravity="center"></ImageView>
</LinearLayout>
