<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/listcolor">
	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_height="wrap_content" android:layout_width="fill_parent">
		<EditText android:layout_height="wrap_content" android:id="@+id/todo_edit_summary"
			android:layout_weight="1" android:layout_width="wrap_content"
			android:hint="Nombre"></EditText>

	</LinearLayout>


	<EditText android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_weight="1"
		android:id="@+id/todo_edit_description" android:hint="Descripcion"
		android:gravity="top"></EditText>
	<EditText android:id="@+id/todo_edit_image"
		android:layout_width="match_parent" android:hint="Archivo de imagen"
		android:layout_height="wrap_content"></EditText>
	<RelativeLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:id="@+id/relativeLayout1">
		<Button android:text="@string/guardar" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/todo_edit_button" android:layout_alignParentRight="true"></Button>
		<TextView android:id="@+id/todo_edit_latitud" android:text=""
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_toRightOf="@+id/todo_edit_button"
			android:layout_alignTop="@+id/todo_edit_button"
			android:layout_alignBottom="@+id/todo_edit_button"></TextView>
		<TextView android:id="@+id/todo_edit_longitud" android:text=""
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_toRightOf="@+id/todo_edit_button"
			android:layout_alignBottom="@+id/todo_edit_button" android:gravity="center|top"></TextView>
	</RelativeLayout>


</LinearLayout>
