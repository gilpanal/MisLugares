<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/listcolor">
	<ImageView 
		android:layout_height="wrap_content" android:id="@+id/foto"
		android:layout_width="wrap_content" android:clickable="true"
		android:onClick="onClickSearch" android:layout_gravity="top"
		android:layout_margin="5dp"></ImageView>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/show_edit_image"
		android:text="Pie de foto" android:layout_margin="2dp"
		android:textSize="15sp"></TextView>
	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_height="wrap_content" android:layout_width="fill_parent">
		<TextView android:layout_height="wrap_content" android:id="@+id/show_edit_summary"
			android:layout_weight="1" android:layout_width="wrap_content"
			android:hint="Nombre" android:layout_margin="5dp" android:textSize="30sp"></TextView>

	</LinearLayout>


	<TextView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_weight="1"
		android:id="@+id/show_edit_description" android:hint="Descripcion"
		android:gravity="top" android:layout_margin="5dp" android:textSize="25sp"></TextView>
	<TextView android:text="Latitud" android:id="@+id/show_edit_latitud"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	<TextView android:text="Longitud" android:id="@+id/show_edit_longitud"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	<Button android:text="@string/editar" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/show_edit_button" android:layout_gravity="right"></Button>


</LinearLayout>